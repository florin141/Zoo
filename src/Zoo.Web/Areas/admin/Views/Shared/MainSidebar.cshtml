<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a asp-area="admin" asp-action="Index" asp-controller="Dashboard" class="brand-link">
        <img src="~/admin/dist/img/AdminLTELogo.png" alt="Zoo Logo" class="brand-image img-circle elevation-3"
             style="opacity: .8">
        <span class="brand-text font-weight-light">Zoo Management</span>
    </a>
    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user panel (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="~/admin/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
            </div>
            <div class="info">
                <a href="#" class="d-block">@User.Claims.Single(a => a.Type == "given_name").Value @User.Claims.Single(a => a.Type == "family_name").Value</a>
            </div>
        </div>
        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <!-- Add icons to the links using the .nav-icon class
    with font-awesome or any other icon font library -->
                <li class="nav-header">DASHBOARD</li>
                <li class="nav-item">
                    <a asp-area="admin" asp-action="Index" asp-controller="Dashboard" class="nav-link">
                        <i class="nav-icon fas fa-tachometer-alt"></i>
                        <p>Dashboard</p>
                    </a>
                </li>
                <li class="nav-header">HABITATS</li>
                <li class="nav-item">
                    <a asp-area="admin" asp-action="Index" asp-controller="Habitats" class="nav-link">
                        <i class="nav-icon fas fa-tachometer-alt"></i>
                        <p>Habitats</p>
                    </a>
                </li>
                <li class="nav-header">ANIMALS</li>
                <li class="nav-item">
                    <a asp-area="admin" asp-action="Index" asp-controller="Animals" class="nav-link">
                        <i class="nav-icon fas fa-tachometer-alt"></i>
                        <p>Animals</p>
                    </a>
                </li>
                <li class="nav-header">EMPLOYEES</li>
                <li class="nav-item">
                    <a asp-area="admin" asp-action="Index" asp-controller="Employees" class="nav-link">
                        <i class="nav-icon fas fa-tachometer-alt"></i>
                        <p>Employees</p>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>