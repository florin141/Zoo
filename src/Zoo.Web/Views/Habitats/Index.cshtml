@model IEnumerable<Zoo.Core.Domain.Habitat>

@{
    var isAlignToRight = true;
}

<header class="masthead text-center text-white">
    <div class="masthead-content">
        <div class="container">
            <h1 class="masthead-heading mb-0">Habitats</h1>
            <h2 class="masthead-subheading mb-0 invisible">Habitats and Ecosystems</h2>
        </div>
    </div>
</header>

@foreach (var habitat in Model)
{
    if (isAlignToRight)
    {
        <section>
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-6 order-lg-2">
                        <div class="p-5">
                            <img class="img-fluid rounded-circle" src="data:image/png;base64,@habitat.Picture" alt="">
                        </div>
                    </div>
                    <div class="col-lg-6 order-lg-1">
                        <div class="p-5">
                            <a class="nav-link" asp-area="" asp-controller="Habitats" asp-action="Animals" asp-route-id="@habitat.Id">
                                <h2 class="display-4">@habitat.Name</h2>
                            </a>
                            <p>@habitat.Description</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        isAlignToRight = false;
    }
    else
    {
        <section>
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-6">
                        <div class="p-5">
                            <img class="img-fluid rounded-circle" src="data:image/png;base64,@habitat.Picture" alt="">
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="p-5">
                            <a class="nav-link" asp-area="" asp-controller="Habitats" asp-action="Animals" asp-route-id="@habitat.Id">
                                <h2 class="display-4">@habitat.Name</h2>
                            </a>
                            <p>@habitat.Description</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        isAlignToRight = true;
    }
}
